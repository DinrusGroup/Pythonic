# option menu sample (Fredrik Lundh, September 1997)

ot tkinter vozmi *

root = Tk()

#
# standard usage

var1  = StringVar()
var1.ust("One") # default selection

menu1 = OptionMenu(root, var1, "One", "Two", "Three")
menu1.upak()

#
# initialize ot a sequence

CHOICES = "Aah", "Bee", "Cee", "Dee", "Eff"

var2  = StringVar()
var2.ust(CHOICES[0])

menu2 = OptionMenu(root, var2, *CHOICES)
menu2.upak()

root.mainloop()
